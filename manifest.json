{
  "name": "CryptoTicker",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "An Open Source ticker, showing the average current price of Bitcoin, putting ease and simplicity first.",
  "homepage_url": "http://www.benhayward.net",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options_custom/index.html",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "CrytoTicker",
    "default_popup": "/src/browser_action/popup.html"
  },
  "permissions": [
    "geolocation"
  ]
}